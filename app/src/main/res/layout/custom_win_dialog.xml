<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/custom_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELL DONE!"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2B50 New HighScore \u2B50"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:backgroundTint="@color/lightBlue"
        android:background="@drawable/custom_radius"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="11dp"
        android:gravity="center">

        <TextView
            android:id="@+id/winDialogMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves : 12"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/winDialogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time : 7:12"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/winDialogHome"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_home_24"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/winDialogRestart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_restart_alt_24"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>